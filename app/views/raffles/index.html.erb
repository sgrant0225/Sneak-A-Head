

<h1>Listing of Raffles</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><strong>Title</strong></td>
      <td><strong>Tickets</strong></td>
      <td><strong>Details</strong></td>
    </tr>
    <% @raffles.each do |raff| %>
      <tr>

        <td><%= raff.title %></td>
        <td><%= raff.tickets %></td>
        <td><%= raff.content %></td>
        <td><%= raff.date %></td>
        <td><%= raff.open %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>